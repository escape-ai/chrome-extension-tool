{
  "name": "Fakerinos",
  "version": "0.1",
  "description": "Crowd-Sourced Insights on the News You Read.",
  "options_page": "options.html",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "*://fakerinos.herokuapp.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
